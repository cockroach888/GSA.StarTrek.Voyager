@{
    <div class="row">
        <div class="col-8 offset-4">
            <label id="lblCount">0</label>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <form>
                <div class="mb-3">
                    <label for="txtTopic" class="form-label">主题名称</label>
                    <input type="text" class="form-control" id="txtTopic" aria-describedby="topicTips">
                    <div id="topicTips" class="form-text">MQTT 主题</div>
                </div>
                <div class="mb-3">
                    <label for="txtMessage" class="form-label">消息正文</label>
                    <input type="text" class="form-control" id="txtMessage" aria-describedby="messageTips">
                    <div id="messageTips" class="form-text">需要发送的消息内容</div>
                </div>
                <button type="button" class="btn btn-primary" onclick="onSendMessage()">发送</button>
            </form>
        </div>
        <div class="col-8">
            <ul id="msgBox"></ul>
        </div>
    </div>
}
@section Scripts{    
    @await Html.PartialAsync("_SignalRScriptsPartial")
}
